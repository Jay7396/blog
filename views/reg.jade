extends layout

block content
	h1= title
	form.form-horizontal(action="apis/login", role="form", method="post", name="login")
		.form-group
			label.col-sm-2.control-label(for="inputName") Username or e-mail
			.col-sm-3
				input.form-control(type="text", name="name", placeholder="Username or e-mail")
		.form-group			
			label.col-sm-2.control-label(for="inputName") password
			.col-sm-3
				input.form-control(type="password", name="password")
		.form-group			
			label.col-sm-2.control-label(for="inputName") password-repeat
			.col-sm-3
				input.form-control(type="password", name="password-repeat")
		.form-group
			.col-sm-offset-2.col-sm-10
				button.btn.btn-default(type="submit") Sign Up