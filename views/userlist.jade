extends layout

block content
	h1 User List
	table.table
		thead(ng-controller="UserCtrl")
			tr
				th Username
				th Password
				th Create Date
			tr(ng-repeat="user in users")
				td {{user.Username}}
				td {{user.password}}
				td {{user.CreateDate}}
					a.glyphicon.glyphicon-remove(style="float:right",href="/delete/{{user._id}}")
					div(ng-controller="ModalCtrl")
						script#myModalContent.html(type="text/ng-template")
							.modal-helper
								h3.modal-title Edit User
							.modal-body
								form.form-horizontal(action="/login", role="form", method="post", name="login")
									.form-group
										label.col-sm-2.control-label(for="inputName") Username or e-mail
										.col-sm-3
											input.form-control(type="text", name="name", placeholder="Username or e-mail")
									.form-group
										label.col-sm-2.control-label(for="inputName") password
										.col-sm-3
											input.form-control(type="password", name="password")
									.form-group
										.col-sm-offset-2.col-sm-10
											button.btn.btn-default(type="submit") Login
						button.btn.btn-defalut(ng-click="open()") edit